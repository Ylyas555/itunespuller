@if (history.Count > 0)
{
    <div>
        @foreach (var song in history)
        {
            <div class="card-body">
                <h5 class="card-title">@song.SongTitle</h5>
                <h6 class="card-subtitle mb-2 text-muted">@song.ChoreName</h6>
                <p>Release Data: @song.Date</p>
                <p>Rating: @song.Rating</p>
            </div>
        }
    </div>
}

@code {
    private string choreInput = "";
    private Song? currentSong;
    private bool hasSearched = false;
    private List<ChoreHistory> history = new();

    protected override async Task OnInitializedAsync()
    {
        history = await ChoreService.GetHistoryAsync();
    }

    private async Task FindSong()
    {
        if (!string.IsNullOrWhiteSpace(choreInput))
        {
            hasSearched = false;
            currentSong = await ChoreService.ProcessChoreAsync(choreInput);
            hasSearched = true;
        }

        if (currentSong != null)
        {
            history.Add(new ChoreHistory
            {
                ChoreName = currentSong.Artist,
                SongTitle = currentSong.Title,
                Date = currentSong.ReleaseDate,
                Rating = 0
            });
        }
    }
    private string GetEmbedUrl(string url)
    {
        if (string.IsNullOrEmpty(url)) return "";
        return url.Replace("watch?v=", "embed/");
    }
    
}